# StockTradeSimulator Environment Configuration Template

# ============================================================================
# 数据库配置
# ============================================================================

# MongoDB 连接字符串
MONGODB_URI=mongodb://localhost:27017/stock-trade-simulator

# 数据库名称
DB_NAME=stock-trade-simulator

# ============================================================================
# 服务器配置
# ============================================================================

# 后端服务器端口
SERVER_PORT=3000

# 前端开发服务器端口
CLIENT_PORT=5173

# API 基础路径
API_BASE_PATH=/api

# ============================================================================
# GameObject 生命周期管理器配置
# ============================================================================

# 性能配置
LIFECYCLE_DEFAULT_FPS=30        # 默认帧率
LIFECYCLE_MIN_FPS=1             # 最小帧率
LIFECYCLE_MAX_FPS=120           # 最大帧率

# 错误处理配置
LIFECYCLE_MAX_ERRORS_PER_OBJECT=3  # 每对象最大错误次数

# 调试API配置
DEBUG_API_PORT=3001             # 调试API端口（避免与主服务器冲突）
DEBUG_API_PREFIX=/api/debug     # API路径前缀

# 监控配置
ENABLE_PERFORMANCE_MONITORING=true  # 启用性能监控
MEMORY_CHECK_INTERVAL=60000     # 内存检查间隔(毫秒)

# 日志配置
LIFECYCLE_LOG_LEVEL=info        # 日志级别: debug, info, warn, error
LIFECYCLE_ENABLE_CONSOLE_LOG=true  # 启用控制台日志
LIFECYCLE_ENABLE_FILE_LOG=false    # 启用文件日志

# ============================================================================
# 安全配置
# ============================================================================

# JWT 密钥（生产环境请使用强密钥）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 会话密钥
SESSION_SECRET=your-session-secret-key

# CORS 配置
CORS_ORIGIN=http://localhost:5173

# ============================================================================
# 开发配置
# ============================================================================

# 环境模式
NODE_ENV=development

# 启用调试模式
DEBUG=true

# 热重载
HOT_RELOAD=true

# API 响应延迟模拟（毫秒，仅开发环境）
API_DELAY_MS=0

# ============================================================================
# 生产配置
# ============================================================================

# 生产环境数据库（生产环境时取消注释并修改）
# MONGODB_URI=mongodb://username:password@host:port/database

# 生产环境端口
# PORT=8080

# 启用 HTTPS
# ENABLE_HTTPS=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ============================================================================
# 第三方服务配置
# ============================================================================

# Redis 配置（如果使用）
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# 邮件服务配置（如果使用）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ============================================================================
# 监控和日志
# ============================================================================

# 应用监控
# SENTRY_DSN=https://your-sentry-dsn

# 日志级别
LOG_LEVEL=info

# 日志文件路径
LOG_FILE_PATH=./logs/app.log

# ============================================================================
# 功能开关
# ============================================================================

# 启用生命周期管理系统
ENABLE_LIFECYCLE_SYSTEM=true

# 启用调试API
ENABLE_DEBUG_API=true

# 启用性能监控
ENABLE_PERFORMANCE_MONITORING=true

# 启用自动备份
ENABLE_AUTO_BACKUP=false

# 备份间隔（小时）
BACKUP_INTERVAL_HOURS=24