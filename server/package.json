{
  "name": "stock-trading-simulator-backend",
  "version": "1.0.0",
  "description": "Stock Trading Simulator Backend - Market Configuration and Environment Initialization API",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/ --ext .js,.ts --fix",
    "clean": "rm -rf dist",
    "demo:us2": "ts-node src/lifecycle/demos/user-story-2-demo.ts",
    "test:lifecycle": "jest tests/lifecycle/lifecycle.test.ts",
    "test:lifecycle:watch": "jest tests/lifecycle/lifecycle.test.ts --watch",
    "test:lifecycle:legacy": "ts-node tests/lifecycle/lifecycle-test-suite.ts",
    "test:lifecycle:basic": "ts-node tests/lifecycle/lifecycle-test-suite.ts --test basic",
    "test:lifecycle:performance": "ts-node tests/lifecycle/lifecycle-test-suite.ts --test performance"
  },
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.8",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts",
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
