{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "allowJs": false,
    "strict": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "ignoreDeprecations": "5.0",
    "types": ["node", "jest", "@types/express"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/types/*"],
      "@shared": ["../shared/types/index"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}