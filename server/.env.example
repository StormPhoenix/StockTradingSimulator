# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=admin
MONGODB_PASSWORD=admin123
MONGODB_DATABASE=stock_trading_simulator
MONGODB_AUTH_SOURCE=admin

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Application Configuration
APP_NAME=Stock Trading Simulator API
APP_VERSION=1.0.0

# Feature Flags
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_STACK_TRACE=true

# GameObject 生命周期管理器配置
LIFECYCLE_DEFAULT_FPS=30        # 默认帧率
LIFECYCLE_MIN_FPS=1             # 最小帧率
LIFECYCLE_MAX_FPS=120           # 最大帧率
LIFECYCLE_MAX_ERRORS_PER_OBJECT=3  # 每对象最大错误次数

# 调试API配置
DEBUG_API_PORT=3000             # 调试API端口
DEBUG_API_PREFIX=/api/debug     # API路径前缀

# 监控配置
ENABLE_PERFORMANCE_MONITORING=true  # 启用性能监控
MEMORY_CHECK_INTERVAL=60000     # 内存检查间隔(毫秒)